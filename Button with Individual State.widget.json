{
    "template": "<html>\n  <style>\n    .state-btn {\n      position: absolute;\n      height: 100%;\n      transform: translateY(-50%) translateX(-10px);\n      width: 100%;\n      display: flex;\n      align-items: center;\n      justify-content: center;\n    \tfont-size: {{config.fontSize}}\n    }\n    \n    .state-btn:hover {\n    cursor: pointer;\n    }\n\n    .action-active {\n      background-color: {{config.activeStateBackgroundColor}};\n    }\n\n    .state-btn-content {\n      \n    }\n  </style>\n\n  <body>\n    <div class=\"state-btn\" ng-class=\"{'action-active': itemValue(config.stateVar) == config.stateCompareVar}\"\n      ng-click=\"sendCmd(config.controlVar, true)\">\n      <div class=\"state-btn-content\">\n        <div>{{ngModel.name}}</div>\n        <div>{{itemValue(config.stateVar)}}</div>\n      </div>\n    </div>\n  </body>\n</html>\n",
